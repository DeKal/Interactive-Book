<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="hhp.interactivebook.InteractiveBookCover"
                android:background="@color/bright_foreground_inverse_material_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interactive"
        android:id="@+id/TextView_AppTitle_1"
        android:layout_marginTop="87dp"
        android:autoText="false"
        android:textColor="#ffcffdff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_read"
        android:id="@+id/Button_Read"
        android:background="#ff000000"
        android:textColor="#ffcffdff"
        android:layout_marginBottom="142dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Button_NewUser"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_profile"
        android:id="@+id/Button_NewUser"
        android:background="#ff000000"
        android:textColor="#ffcffdff"
        android:layout_marginTop="59dp"
        android:layout_alignTop="@+id/Button_Read"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Books"
        android:id="@+id/TextView_AppTitle_2"
        android:autoText="false"
        android:textColor="#ffcffdff"
        android:layout_below="@+id/TextView_AppTitle_1"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
