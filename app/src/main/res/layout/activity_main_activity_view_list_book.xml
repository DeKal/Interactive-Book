<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityViewListBook"
              android:background="#ff000000"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_skin_mode_1"
            android:id="@+id/Btn_Skin1ForChooseBook"
            android:background="#ff000000"
            android:textColor="#ffd6fffb"
            android:layout_weight="0.05"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Btn_Skin2ForChooseBook"
            android:text="@string/btn_skin_mode_2"
            android:background="#ff000000"
            android:textColor="#ffd6fffb"
            android:layout_weight="0.21"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Search"
            android:id="@+id/Button_VoiceSearch"
            android:background="#ff000000"
            android:textColor="#ffd6fffb"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.22"/>

    </LinearLayout>

    <ListView android:clickable="true" android:id="@+id/mylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/oses"
              android:layout_weight="0.19"/>


</LinearLayout>
