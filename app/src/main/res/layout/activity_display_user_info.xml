
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="hhp.interactivebook.DisplayUserInfoActivity"
                android:background="#ff000000">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="User Name:"
    android:id="@+id/textView"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="101dp"
    android:textColor="#ffcffdff"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Email:"
    android:id="@+id/textView2"
    android:textColor="#ffcffdff"
    android:layout_marginTop="28dp"
    android:layout_below="@+id/textView"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Facebook:"
    android:id="@+id/textView3"
    android:textColor="#ffcffdff"
    android:layout_below="@+id/textView2"
    android:layout_alignParentStart="true"
    android:layout_marginTop="25dp"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/username"
    android:editable="false"
    android:layout_above="@+id/textView2"
    android:layout_alignParentEnd="true"
    android:textColor="#ffcffdff"
    />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/email"
    android:editable="false"
    android:layout_alignBottom="@+id/textView2"
    android:layout_alignParentEnd="true"
    android:textColor="#ffcffdff"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/fb"
    android:editable="false"
    android:layout_alignBottom="@+id/textView3"
    android:layout_alignParentEnd="true"
    android:textColor="#ffcffdff"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Back"
    android:id="@+id/btnBackInfo"
    android:textColor="#ffcffdff"
    android:background="#ff080a0a"
    android:textSize="20dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User"
        android:id="@+id/Button_NewUser"
        android:textColor="#ffcffdff"
        android:background="#ff080a0a"
        android:textSize="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points"
        android:id="@+id/textView4"
        android:textColor="#ffcffdff"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_Points"
        android:editable="false"
        android:textColor="#ffcffdff"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/fb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Levels"
        android:id="@+id/textView5"
        android:textColor="#ffcffdff"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_Levels"
        android:textColor="#ffcffdff"
        android:editable="false"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/EditText_Points"/>

</RelativeLayout>
